<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="project"
            type="com.zxj.common.bean.HomeArticle" />

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                image="@{project.envelopePic}"
                android:src="@color/color_FF9A9E"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{project.title}"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:visibility="visible"
                        tools:text="标题标题标题标题标题标题标题题标题标题标题标题标题标题题标题标题标题标题标题标题标题" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{project.niceDate}"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        tools:text="1天前"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{project.desc}"
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF9A9E"
                        android:textSize="14dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        tools:text="新"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{project.author}"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:text="作者" />

                    <ImageView
                        android:id="@+id/ivCollect"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        tools:src="@drawable/ic_collect" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_999999" />
    </LinearLayout>
</layout>
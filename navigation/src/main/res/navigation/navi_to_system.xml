<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi_to_system"
    app:startDestination="@id/naviFragment">

    <fragment
        android:id="@+id/naviFragment"
        android:name="com.zxj.navigation.navi.NaviFragment"
        android:label="NaviFragment" >
        <action
            android:id="@+id/action_naviFragment_to_systemFragment"
            app:destination="@id/systemFragment" />
    </fragment>
    <fragment
        android:id="@+id/systemFragment"
        android:name="com.zxj.navigation.system.SystemFragment"
        android:label="SystemFragment" />
</navigation>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
          <variable
              name="splashViewModel"
              type="com.zxj.wanandroid.SplashViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_splash_bg">

        <Button
            android:id="@+id/splash_bt"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_splash_text"
            android:onClick="@{()->splashViewModel.lanuch()}"
            android:text="跳过"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.965"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/splash_tv_main"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/shape_splash_text"
            android:gravity="center"
            android:text="组件化——WanAndroid"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.259" />

        <TextView
            android:id="@+id/splash_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/shape_splash_text"
            android:gravity="center"
            android:text="Created by : Dev_ZXJ"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.295" />

        <TextView
            android:id="@+id/splash_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_splash_text"
            android:gravity="center"
            android:text="CSDN:https://blog.csdn.net/XJ200012?type=blog"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/splash_tv_1"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/splash_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_splash_text"
            android:gravity="center"
            android:text="GitHub:https://github.com/Allen-ZXJ?tab=repositories"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.429" />

        <TextView
            android:id="@+id/textNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@{String.valueOf(splashViewModel.getNumText())}"
            android:textColor="@color/color_F3F5F4"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/splash_bt"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
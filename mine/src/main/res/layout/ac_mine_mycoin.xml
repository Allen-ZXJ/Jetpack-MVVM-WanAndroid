<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
         <variable
             name="mycoinviewmodel"
             type="com.zxj.mine.mycoin.MyCoinViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/top_bar"
            app:topbarViewModel="@{mycoinviewmodel}" />
        <TextView
            android:id="@+id/tvMyCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF9A9E"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="5dp"
            android:textSize="40dp"
            tool:text="184"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_cacaca"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="10dp"
            android:textSize="20dp"
            android:text="我的积分"/>
        <TextView

            android:text="积分获取记录:"
            android:textSize="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:textColor="@color/color_FF9A9E"
            android:drawableLeft="@drawable/ic_coin"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

    </LinearLayout>
</layout>